# Lago Webhook Configuration
# Add these variables to your main .env file or source this file

# Lago Webhook Secret (REQUIRED for production)
# Get this from Lago Settings → Webhooks or from configure_lago_webhook.sh output
LAGO_WEBHOOK_SECRET="your-lago-webhook-secret-here"

# Authentik API Configuration (REQUIRED)
# URL of your Authentik instance
AUTHENTIK_URL="https://auth.unicorncommander.ai"

# API token for Authentik (create in Authentik admin panel)
# Navigate to: Admin Interface → Applications → Tokens & App passwords
# Create new token with API intent
AUTHENTIK_API_TOKEN="your-authentik-api-token-here"

# Optional: Lago API Configuration (for debugging)
LAGO_API_URL="https://billing-api.unicorncommander.ai"
LAGO_API_KEY="your-lago-api-key"

# Development Mode (INSECURE - DO NOT USE IN PRODUCTION)
# Leave LAGO_WEBHOOK_SECRET empty to skip signature verification
# LAGO_WEBHOOK_SECRET=""
