# Rate Limiting Configuration
# Copy to backend/.env.ratelimit and customize

# Enable/disable rate limiting (true/false)
RATE_LIMIT_ENABLED=true

# Redis connection URL
REDIS_URL=redis://unicorn-redis:6379/0

# Rate limit strategy: sliding_window or token_bucket
RATE_LIMIT_STRATEGY=sliding_window

# Rate limits per endpoint category (format: "count/period")
RATE_LIMIT_AUTH=5/minute
RATE_LIMIT_ADMIN=100/minute
RATE_LIMIT_READ=200/minute
RATE_LIMIT_WRITE=50/minute

# Allow admin users to bypass rate limits
RATE_LIMIT_ADMIN_BYPASS=true

# If Redis is unavailable, fail open (allow) or closed (deny)
RATE_LIMIT_FAIL_OPEN=true

# Redis key prefix
RATE_LIMIT_KEY_PREFIX=ratelimit:
